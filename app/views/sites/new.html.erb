<% use_centered_layout %>

<p><%= t("shared.required_fields") %></p>

<%= render "form", site: @site || current_user.team.sites.build %>

<%= or_separator %>

<h2><%= t('.import') %></h2>
<%= form_with(model: @upload || SiteUpload.new, url: upload_sites_url) do |f| %>
  <%= f.dsfr_file_field :file, label: t('.file'), required: true, hint: t('.file_hint'), class: "fr-mb-4w", accept: ".csv", data: { controller: "dragover", action: "dragover->dragover#enter dragleave->dragover#leave drop->dragover#drop" } %>

  <%= render "tags_form", object: f.object %>

  <%= f.submit t("shared.import"), name: nil, class: "fr-btn", data: { disable_with: t("shared.importing") } %>
<% end %>
