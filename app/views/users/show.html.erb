<% use_centered_layout boxed: false %>

<%= dsfr_table(caption: t('.profile'), border: true) do |t| %>
  <% t.with_head do %>
    <tr>
      <th><%= t('.email') %></th>
      <th><%= t('.team') %></th>
      <th><%= t('.siret') %></th>
    </tr>
  <% end %>
  <% t.with_body do %>
    <tr>
      <td><%= @user.email %></td>
      <td><%= @user.team.organizational_unit %></td>
      <td><%= @user.siret %></td>
    </tr>
  <% end %>
<% end %>

<%= page_actions do %>
  <%= link_to t("shared.back_to_home"), root_path, class: "fr-btn fr-btn--tertiary" %>
<% end %>
